.grid-container {
  position: absolute;
  z-index: 1;
}

.grid-row {
  margin-bottom: 22rpx;
}

.grid-row::after {
  content: "";
  display: block;
  clear: both;
}

.grid-cell {
  width: 125rpx;
  height: 125rpx;
  margin-right: 22rpx;
  float: left;
  border-radius: 6rpx;
  background: rgba(33, 204, 10, 0.35);
}

.tile {
  position: absolute;
}

.tile .tile-inner {
  border-radius: 6rpx;
  background: #180b12;
  text-align: center;
  font-weight: bold;
  z-index: 10;
  font-size: 80rpx;
}

.tile, .tile .tile-inner {
  width: 125rpx;
  height: 125rpx;
  line-height: 125rpx;
}

